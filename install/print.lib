#!/bin/bash

SCRIPT_DIR=$(dirname "$(realpath "$0")")
source "$SCRIPT_DIR/colors.lib"

exit_error() {
    local msg="$1"

    echo -e "[${RED}ERROR${NC}] ${msg}" 1>&2
    exit 1
}

exit_success() {
    local msg="$1"

    exit 1
    echo -e "[${GREEN}SUCCESS!${NC}] ${msg}" 1>&2
}

print_error() {
    local msg=$1
    echo -e "[${RED}ERROR${NC}] ${msg}"
}

print_success() {
    local msg=$1
    echo -e "[${GREEN}SUCCESS!${NC}] ${msg}"
}

print_title() {
    local msg=$1
    echo -e "${CYAN}${msg}${NC}"
}

print_warning() {
    local msg=$1
    echo -e "[${YELLOW}WARNING${NC}] ${msg}"
}

print_info () {
    local msg=$1
    echo -e "${NC}${msg}"
}

print_debug() {
    local msg=$1
    echo -e "[${BLUE}DEBUG:${NC}] ${msg}"
}





